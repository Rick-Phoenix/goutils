{{ define ".pre-commit-config.yaml" }}
repos:
  - repo: https://github.com/gitleaks/gitleaks
    rev: v8.27.2
    hooks:
      - id: gitleaks
  {{ if .Oxlint -}}
  - repo: local
    hooks:
      - id: oxlint
        name: oxlint
        entry: oxlint
        language: system
        files: '\.svelte$|\.js$|\.ts$'
        types: [file]
  {{ end -}}
{{ end }}
